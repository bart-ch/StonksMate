<h1><%= @stock[:symbol] %></h1>

<div style="margin-top: 20px;">
  <p style="font-size: 2.5em; font-weight: bold; margin: 0;">
    $<%= number_with_precision(@stock[:price], precision: 2) %>
  </p>

  <% if @stock[:change] && @stock[:change_percent] %>
    <% color = @stock[:change] >= 0 ? "green" : "red" %>
    <% sign = @stock[:change] >= 0 ? "+" : "" %>
    <p style="font-size: 1.2em; color: <%= color %>; margin-top: 5px;">
      <%= sign %><%= number_with_precision(@stock[:change], precision: 2) %>
      (<%= sign %><%= number_with_precision(@stock[:change_percent], precision: 2) %>%)
    </p>
  <% end %>

  <table style="margin-top: 20px; border-collapse: collapse;">
    <tr>
      <td style="padding: 8px; border: 1px solid #ddd;"><strong>Open</strong></td>
      <td style="padding: 8px; border: 1px solid #ddd;">$<%= number_with_precision(@stock[:open], precision: 2) %></td>
    </tr>
    <tr>
      <td style="padding: 8px; border: 1px solid #ddd;"><strong>High</strong></td>
      <td style="padding: 8px; border: 1px solid #ddd;">$<%= number_with_precision(@stock[:high], precision: 2) %></td>
    </tr>
    <tr>
      <td style="padding: 8px; border: 1px solid #ddd;"><strong>Low</strong></td>
      <td style="padding: 8px; border: 1px solid #ddd;">$<%= number_with_precision(@stock[:low], precision: 2) %></td>
    </tr>
    <tr>
      <td style="padding: 8px; border: 1px solid #ddd;"><strong>Previous Close</strong></td>
      <td style="padding: 8px; border: 1px solid #ddd;">$<%= number_with_precision(@stock[:previous_close], precision: 2) %></td>
    </tr>
  </table>
</div>

<div style="margin-top: 30px;">
  <%= link_to "â† Back to Search", stocks_path, style: "color: #0066cc;" %>
</div>
